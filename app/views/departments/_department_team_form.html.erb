
<div class="nested-form-wrapper" data-new-record="<%= form.object.new_record? %>">
  <div class="my-5 inline-flex gap-x-2">
    <%= form.label :name %>
    <%= form.text_field :name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-60" %>

    <button type="button" data-action="nested-form#remove" class="rounded-lg py-2 px-2 bg-red-600 text-white bg-red-800 rounded-xl hover:bg-red-700 inline-block font-medium cursor-pointer">
      <%= inline_svg_tag('icons/trash.svg', class: 'w-6 h-6 fill-current') %>
    </button>
    <%= form.hidden_field :_destroy %>
  </div>
</div>
